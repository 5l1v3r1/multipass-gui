<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="MpWindow" parent="GtkWindow">
    <child type="titlebar">
      <object class="GtkHeaderBar">
        <property name="visible">True</property>
        <property name="show_close_button">True</property>
        <property name="title" translatable="yes">Multipass</property>
      </object>
    </child>
    <child>
      <object class="GtkStack" id="main_stack">
        <property name="visible">True</property>
        <child>
          <object class="GtkBox">
            <property name="visible">True</property>
            <property name="orientation">vertical</property>
            <property name="valign">center</property>
            <property name="spacing">6</property>
            <child>
              <object class="GtkLabel">
                <property name="visible">True</property>
                <property name="label" translatable="yes">Multipass is not installed</property>
              </object>
            </child>
            <child>
              <object class="GtkLabel">
                <property name="visible">True</property>
                <property name="label" translatable="yes">$ snap install multipass</property>
                <attributes>
                  <attribute name="font-desc" value="Ubuntu Mono 12"/>
                </attributes>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkBox" id="instances_box">
            <property name="visible">True</property>
            <child>
              <object class="GtkListBox" id="instances_listbox">
                <property name="visible">True</property>
                <signal name="row-selected" handler="instance_row_selected_cb" object="MpWindow" swapped="yes"/>
                <signal name="row-activated" handler="instance_row_activated_cb" object="MpWindow" swapped="yes"/>
                <child>
                  <object class="GtkListBoxRow" id="add_row">
                    <property name="visible">True</property>
                    <property name="selectable">False</property>
                    <child>
                      <object class="GtkImage">
                        <property name="visible">True</property>
                        <property name="margin">12</property>
                        <property name="icon_name">list-add-symbolic</property>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="GtkStack" id="instances_stack">
                <property name="visible">True</property>
                <child>
                  <object class="GtkLabel">
                    <property name="visible">True</property>
                    <property name="label" translatable="yes">No instances setup, please launch one!</property>
                  </object>
                </child>
                <child>
                  <object class="GtkBox" id="image_box">
                    <property name="visible">True</property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
